# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Application
NODE_ENV=production
PORT=4000

# MongoDB (Docker)
MONGODB_URI=mongodb://admin:password@mongo:27017/dimondcastle?authSource=admin

# MongoDB Credentials (used by docker-compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_password_here
MONGO_DATABASE=dimondcastle

# File Uploads
UPLOAD_DIR=/app/uploads

# CORS - Comma-separated list of allowed origins
FRONTEND_ORIGINS=https://www.yourdomain.com,https://yourproject.vercel.app

ADMIN_USER=your_admin_username
ADMIN_PASS=your_secure_admin_password
JWT_SECRET=your_jwt_secret_here

# Legacy Cloudinary (will be removed after migration)
CLOUDINARY_URL=
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# For migration script (Atlas connection)
ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/dimondcastle?retryWrites=true&w=majority
